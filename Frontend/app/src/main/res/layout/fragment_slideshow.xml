<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/challanNoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Challan Number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextChallanNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/vehicleTypeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Vehicle Type"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/challanNoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/vehicleNoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Vehicle Number"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/vehicleTypeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextVehicleNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/fromWarehouseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Warehouse:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/vehicleNoLayout"
            app:layout_constraintStart_toStartOf="parent" />


        <Spinner
            android:id="@+id/spinnerFromWarehouse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/fromWarehouseLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/toWarehouseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Warehouse:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerFromWarehouse"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerToWarehouse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/toWarehouseLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/shipmentsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Shipments:"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerToWarehouse"
            app:layout_constraintStart_toStartOf="parent" />

        <ListView
            android:id="@+id/listViewShipments"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/shipmentsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCreateChallan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Create Challan"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/listViewShipments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>